@using NewsLetter_MVC.ViewModels
@model  List<SignUpVM>

<div class="row no-gutters m-3">                <!-- THE LINE OF CODE BELOW STATES HOW THE COLUMS SHOULD 
                                                     LOOK BASES ON SCREEN SIZE -->
   <div class="card col-sm-12 card col-md-10 card col-lg-6 mx-auto shadow" > 
       <div class="card-header text-center">
           <h5 class="m-0">Sign-ups</h5>
       </div>
       <div class="card-body">
           <!--IN THIS SIGN UP WE ARE LOOPING THROUGH THE MODEL "AKA CLASS" AND ADDING THAT INFO TO EACH COLUMN-->
           @foreach (var signup in Model)
           {
               <div class="row">
                   <div class="col">
                       @signup.FirstName
                   </div>
                   <div class="col">
                       @signup.LastName
                   </div>
                   <div class="col">
                       @signup.EmailAddress
                   </div>

               </div>
           }

       </div>
   </div>
</div>